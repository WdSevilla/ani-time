---
const blogdetail = "/blogdetail/";

const fetchBlogPosts = async () => {
  const response = await fetch("https://basiccrud-pw73.onrender.com/api/blogPosts");
  if (!response.ok) {
    throw new Error("Error al cargar los datos");
  }
  const blogPosts = await response.json();
  
  // Formatear la fecha y hora de cada anime manteniendo la hora en UTC+9
  return blogPosts.map(blog => {
    return blog;
  });
};

// Obtener los datos al cargar la página
const blogPosts = await fetchBlogPosts();
---
<article class="bg-white p-4 rounded-md shadow-md mb-8">
    <h2 class="text-2xl font-bold mb-2">Noticia Destacada</h2>
    <img src={`https://hiddentours.blob.core.windows.net/hiddenblob/${blogPosts.blobId}`} alt="Noticia destacada" class="w-full h-auto mb-4 rounded">
    <p class="text-gray-700 mb-4">{blogPosts.title}</p>
    <a href={blogdetail + blogPosts._id } class="text-blue-500 hover:underline">Leer más</a>
  </article>
  