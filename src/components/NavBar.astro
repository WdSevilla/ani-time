	<meta charset="UTF-8"/>
<header class="bg-gray-700 text-yellow-400">
    <div class="container mx-auto flex justify-between items-center p-1">
      <a href="/" class="text-xl font-bold">NAVBAR</a>
      <button id="menu-button" class="md:hidden text-white focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
      <nav id="navbar" class="hidden md:flex space-x-4">
        <a href="/" class="block px-4 py-2 hover:bg-gray-700 rounded">Inicio</a>
        <a href="/blog" class="block px-4 py-2 hover:bg-gray-700 rounded">Blog</a>
        <a href="/services" class="block px-4 py-2 hover:bg-gray-700 rounded">Redes</a>
        <a href="/contact" class="block px-4 py-2 hover:bg-gray-700 rounded">Buy Me a Coffee</a>
      </nav>
    </div>
    <nav id="mobile-menu" class="md:hidden hidden">
      <a href="/" class="block px-4 py-2 hover:bg-gray-700 rounded">Inicio</a>
      <a href="/about" class="block px-4 py-2 hover:bg-gray-700 rounded">Blog</a>
      <a href="/services" class="block px-4 py-2 hover:bg-gray-700 rounded">Redes</a>
      <a href="/contact" class="block px-4 py-2 hover:bg-gray-700 rounded">Buy Me a Coffee</a>
    </nav>
  </header>
  
  <script>
    document.getElementById('menu-button').addEventListener('click', () => {
      document.getElementById('mobile-menu').classList.toggle('hidden');
    });
  </script>
  