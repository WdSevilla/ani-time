---

import Layout from "@layouts/Layout.astro";

const { id } = Astro.params;

const response = await fetch(`http://localhost:3200/api/animes/first10?id=${id}`);


const anime = await response.json();
const titleAnime = "bg-gray-600 text-white font-semibold text-center pl-2 pr-2 text-3xl rounded-sm ";
---

<Layout>
  <div class="grid justify-center">
    <div class="flex-col mt-5 p-3 space-x-3 lg:flex lg:flex-row">
        <div class="col-md-4">
          <img src={`https://hiddentours.blob.core.windows.net/hiddenblob/${anime.blobId}`} alt="poster" class="w-[500px] img-fluid round-start">
        </div>
        <div class="col-md-8">
          <h1><span class={titleAnime}>{anime.title}</span></h1>
          <h2>Overview</h2>
          <p class="" >{anime.descriptionLong}</p>
          <p>
            <span class="badge text-bg-secondary">{anime.release}</span>
          </p>
          <p>
            <span class="badge text-bg-danger">{anime.category}</span>
          </p>
        </div>
      </div>
  </div>

</Layout>
